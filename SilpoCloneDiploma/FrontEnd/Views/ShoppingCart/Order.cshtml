@{
    ViewData["Title"] = "Home Page";
}
<link rel="stylesheet" href="~/css/pagesStyles/mainPage.css" asp-append-version="true" />
<style>
    .container {
        width: 873px;
        height: 724px;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: flex-start;
        gap: 40px;
        margin: 0;
    }

    .content {
        margin-left: 0;
        margin-top: -4%;
    }

    .orderLabel {
        position: absolute;
        width: 871px;
        height: 64px;
        left: 0px;
        top: 45px;

        font-family: 'Noto Sans';
        font-style: normal;
        font-weight: 500;
        font-size: 40px;
        line-height: 54px;
        text-align: center;
        color: #1E1E1E;
        flex: none;
        order: 0;
        flex-grow: 0;
        z-index: 0;
        margin-top: 3%;
        margin-left: 12%;

    }

    .RadioButton {
        width: 24px;
        height: 24px;
        padding: 5px;
        border-radius: 16px;
        border: 2px #CBCBCB solid;
        display: flex;
        justify-content: center;
        align-items: center;
        box-shadow: 0px 1px 10px rgba(218, 80, 1, 0.20);
        cursor: pointer;
    }

    .RadioButton.selected {
        border: 2px #FF5722 solid;
    }

    .RadioButton .Ellipse4 {
        width: 14px;
        height: 14px;
        background: #FF5722;
        border-radius: 9999px;
        display: none;
    }

    .RadioButton.selected .Ellipse4 {
        display: block;
    }

    .time-option {
        padding: 8px 16px;
        border-radius: 36px;
        border: 1px solid #CBCBCB;
        display: flex;
        align-items: center;
        gap: 16px;
        cursor: pointer;
    }

    .time-option.selected {
        border: 1px solid #FF5722;
        background-color: rgba(255, 87, 34, 0.1);
    }

    .time-option img {
        width: 28px;
        height: 28px;
    }

    .custom-time-input {
        display: none;
        width: 100px;
        padding: 4px;
        border-radius: 5px;
        border: 1px solid #CBCBCB;
    }

    /* Parent container should be flex */
    .parent-container {
        display: flex;
        justify-content: flex-end;
        /* Push child to the right */
    }

    /* Add width to CertificateDetails if needed */
    .CertificateDetails {
        width: 50%;
        /* Adjust width as per your requirement */
        height: 536px;
        padding: 28px;
        border-radius: 36px;
        border: 3px #FF5722 solid;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
        gap: 32px;
        display: flex;
        padding-top: 30%;
    }


    .Detail {
        align-self: stretch;
        justify-content: space-between;
        align-items: center;
        display: inline-flex;
    }

    .DetailLabel {
        width: 240px;
        color: #1E1E1E;
        font-size: 16px;
        font-family: Noto Sans;
        font-weight: 400;
        word-wrap: break-word;
    }

    .DetailValue {
        text-align: right;
        color: #1E1E1E;
        font-size: 16px;
        font-family: Noto Sans;
        font-weight: 600;
        word-wrap: break-word;
    }

    .DetailValue.total {
        font-size: 20px;
    }

    .AdditionalInfo {
        align-self: stretch;
        height: 313px;
        padding-top: 40px;
        flex-direction: column;
        justify-content: flex-start;
        align-items: flex-start;
        gap: 28px;
        display: flex;
    }

    .InfoContent {
        align-self: stretch;
        height: 199px;
        flex-direction: column;
        justify-content: flex-start;
        align-items: flex-start;
        gap: 20px;
        display: flex;
    }

    .InfoTitle {
        align-self: stretch;
        height: 22px;
        color: #1E1E1E;
        font-size: 16px;
        font-family: Noto Sans;
        font-weight: 600;
        word-wrap: break-word;
    }

    .InfoComment {
        align-self: stretch;
        padding: 20px;
        border-radius: 4px;
        border: 1px #CBCBCB solid;
        color: #757575;
        font-size: 14px;
        font-family: Noto Sans;
        font-weight: 400;
        word-wrap: break-word;
    }

    .PromoNext {
        align-self: stretch;
        padding: 12px;
        background: #FF5722;
        border-radius: 36px;
        border: 2px #FFFEFE solid;
        justify-content: space-between;
        align-items: center;
        display: inline-flex;
    }

    .NextText {
        width: 310px;
        height: 22px;
        text-align: center;
        color: #FFFEFE;
        font-size: 16px;
        font-family: Noto Sans;
        font-weight: 600;
        word-wrap: break-word;
    }

    .popup {
        display: none;
        flex-direction: column;
        align-items: center;
        padding: 40px 40px 60px;
        gap: 40px;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 551px;
        height: 660.64px;
        background: #FFFEFE;
        border-radius: 40px;
        z-index: 1000;
        box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.5);
    }

    .cancel {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        width: 24px;
        height: 24px;
        cursor: pointer;
        position: absolute;
        top: 20px;
        right: 20px;
    }

    .popup-content {
        text-align: center;
    }

    .ThankYou {
        font-family: 'Noto Sans';
        font-size: 40px;
        font-weight: 600;
        color: #1E1E1E;
        margin-bottom: 20px;
    }

    .promo {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 471px;
        height: 46px;
        background: #FF5722;
        border-radius: 36px;
        cursor: pointer;
    }

    .ConfirmOrder {
        font-family: 'Noto Sans';
        font-size: 16px;
        font-weight: 600;
        color: #FFFEFE;
    }

    .order-success {
        font-family: 'Noto Sans';
        font-size: 16px;
        font-weight: 600;
        color: #1E1E1E;
        margin-bottom: 8px;
    }

    .order-info {
        font-family: 'Noto Sans';
        font-size: 14px;
        font-weight: 400;
        color: #757575;
    }
</style>


