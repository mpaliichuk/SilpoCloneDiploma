<script>

    let cartItems = {
        'item-1': {
            name: 'Лимон',
            weight: 0.1,
            pricePerKg: 189.00
        },
        'item-2': {
            name: 'Ожина фасована',
            weight: 0.1,
            pricePerKg: 189.00
        },
        'item-3': {
            name: 'Папайя',
            weight: 0.1,
            pricePerKg: 189.00
        }
    };

    document.getElementById('clear-cart-button').addEventListener('click', function () {
        const cartItemsDisplay = document.querySelectorAll('.cart-item');
        cartItemsDisplay.forEach(item => item.remove());
        cartItems = {};
        updateCertificateDetails();
    });

    function updateCartItemDisplay(itemId) {
        const item = cartItems[itemId];
        const quantityText = document.querySelector(`.cart-item[data-id="${itemId}"] .quantity-text`);
        const itemTotal = document.querySelector(`.cart-item[data-id="${itemId}"] .item-total`);
        const quantityUnit = document.querySelector(`.cart-item[data-id="${itemId}"] .quantity-unit`);

        quantityText.textContent = `${item.weight.toFixed(1)} кг`;
        itemTotal.textContent = `${(item.weight * item.pricePerKg).toFixed(2)} грн`;

        const weightInGrams = (item.weight * 1000).toFixed(0);
        quantityUnit.textContent = `${weightInGrams} г`;

        updateCertificateDetails();
    }

    function updateCertificateDetails() {
        let totalWeight = 0;
        let totalPrice = 0;

        for (let itemId in cartItems) {
            totalWeight += cartItems[itemId].weight;
            totalPrice += cartItems[itemId].weight * cartItems[itemId].pricePerKg;
        }

        document.getElementById('totalWeight').textContent = `${totalWeight.toFixed(2)} кг`;
        document.getElementById('totalPrice').textContent = `${totalPrice.toFixed(2)} грн`;

        if (totalWeight === 0 && totalPrice === 0) {
            document.getElementById('totalWeight').textContent = `0.00 кг`;
            document.getElementById('totalPrice').textContent = `0.00 грн`;
        }
    }

    function incrementQuantity(itemId) {
        if (cartItems[itemId].weight < 10) {
            cartItems[itemId].weight = (cartItems[itemId].weight + 0.1).toFixed(1);
            cartItems[itemId].weight = parseFloat(cartItems[itemId].weight);
            updateCartItemDisplay(itemId);
        }
    }

    function decrementQuantity(itemId) {
        if (cartItems[itemId].weight > 0.1) {
            cartItems[itemId].weight = (cartItems[itemId].weight - 0.1).toFixed(1);
            cartItems[itemId].weight = parseFloat(cartItems[itemId].weight);
            updateCartItemDisplay(itemId);
        }
    }

    function removeItem(itemId) {
        delete cartItems[itemId];
        document.querySelector(`.cart-item[data-id="${itemId}"]`).remove();
        updateCertificateDetails();
    }

    updateCertificateDetails();
</script>