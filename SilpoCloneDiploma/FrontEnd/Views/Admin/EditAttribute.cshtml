@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    // var admin = ViewBag.Admin as AdminModel; // Розкоментуйте, якщо будете використовувати дані адміністратора
}

<div class="content-wrapper">
    <div class="content">
        <div class="admin-info">
            @* <img src="@admin.PhotoUrl" alt="Admin" class="admin-avatar"> *@
            <div class="admin-name">
                <span>@* @admin.Name @admin.Surname *@ User Name</span>
                <span>@* @admin.Role *@ Role</span>
            </div>
        </div>
        <div class="form-container">
            <h2 style="color:#004d00;">Редагування атрибуту</h2>
            <form asp-action="EditAttribute" asp-controller="Admin" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name">Назва</label>
                    <input type="text" class="form-control" id="name" name="name" />
                    @*  <span class="text-danger"  asp-validation-for="name" ></span> *@ 
                </div>
                <div class="form-group">
                    <label for="index">Індекс</label>
                    <input type="text" class="form-control" id="index" name="index" />
                   @*   <span class="text-danger"  asp-validation-for="index" ></span>  *@
                </div>
                <div class="form-group">
                    <label for="group">Група</label>
                    <input type="text" class="form-control" id="group" name="group" />
                     @* <span class="text-danger"  asp-validation-for="group" ></span> *@  
                </div>
                <div class="form-group">
                    <input type="file" id="photo" name="photo" class="form-control-file" style="display: none;" />
                    <img id="photo-preview" src="/Admin_Image/DefaultImage.png" alt="Фото" style="display: block; margin-top: 20px; max-width: 200px;" />
                    <button type="button" class="btn btn-primary myBtnForPhoto" onclick="document.getElementById('photo').click();">Завантажити файл</button>
                    <span id="file-name" style="margin-left: 10px;">Шлях до Фото</span>
                </div>
                <button type="submit" class="btn btn-primary">Зберегти</button>
                <button type="reset" class="btn btn-secondary" onclick="resetForm()">Відмінити</button>
            </form>
        </div>
    </div>
</div>
